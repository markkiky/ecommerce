<h1>Billing Addresses</h1>

<table class="responsive nowrap table table-hover" id="dttb-billing_addresses" data-sort="true" data-source="<%= url_for(format: :json)%>">
  <thead>
    <tr>
      <th data-data="address">Address</th>
      <th data-data="city">City</th>
      <th data-data="region">Region</th>
      <th data-data="postal_code">Postal code</th>
      <th data-data="country">Country</th>
      <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px"></th>
    </tr>
  </thead>

</table>

<br>

<%= link_to 'New Billing Address', new_billing_address_path %>