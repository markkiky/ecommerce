<p id="notice"><%= notice %></p>

<h1>Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th>Order number</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Discount</th>
      <th>Total</th>
      <th>Id sku</th>
      <th>Size</th>
      <th>Color</th>
      <th>Fulfilled</th>
      <th>Ship date</th>
      <th>Order item</th>
      <th>Bill date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order_id %></td>
        <td><%= order_item.product_id %></td>
        <td><%= order_item.order_number %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.discount %></td>
        <td><%= order_item.total %></td>
        <td><%= order_item.id_sku %></td>
        <td><%= order_item.size %></td>
        <td><%= order_item.color %></td>
        <td><%= order_item.fulfilled %></td>
        <td><%= order_item.ship_date %></td>
        <td><%= order_item.order_item_id %></td>
        <td><%= order_item.bill_date %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

