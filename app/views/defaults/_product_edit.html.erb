        <!-- Page Sidebar Start-->
        <%= render 'layouts/admin_sidebar' %>
        <!-- Page Sidebar Ends-->

        <!-- Right sidebar Start-->

        <!-- Right sidebar Ends-->
        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>Edit Product
                                    <small><%= AdminConfig[:app_name] %> Admin panel</small>
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="<%= root_url %>"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">Physical</li>
                                <li class="breadcrumb-item active">Edit Product</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Edit Product</h5>
                            </div>
                            <%= form_with scope: :product, url: "/products/#{@product.id}", method: :PATCH, local: true do |form| %>
                            <div class="card-body">
                                <div class="row product-adding">
                                    <div class="col-lg-5 col-md-5 col-sm-12 pr-2">
                                        <div class="add-product">
                                            <div class="row">
                                                <div class="col-xl-9 xl-50 col-sm-6 col-9">
                                                    <% if @product.images.attached? %>
                                                    <%= image_tag @product.images[0], class: "img-fluid image_zoom_1 blur-up lazyloaded", alt: "", id: "big_image" %>
                                                    <%else%>
                                                    <%= image_tag 'default_profile', class: "img-fluid image_zoom_1 blur-up lazyloaded", alt: "", id: "big_image" %>
                                                    <%end%>
                                                </div>
                                                <div class="col-xl-3 xl-50 col-sm-6 col-3">
                                                    <ul class="" id="side_gallery">
                                                        <% if @product.images.attached? %>
                                                        <% count = 0 %>
                                                        <% @product.images.each do |image| %>
                                                        <% count += 1 %>
                                                        <li>
                                                            <div class="box-input-file mb-5">
                                                                <%= image_tag  image, onClick: "setBigImage()", "data-id": count, class: "img-fluid blur-up lazyload mb-1 " %>
                                                            </div>
                                                        </li>
                                                        <%end%>
                                                        <% puts count %>
                                                        <%end%>

                                                    </ul>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 pl-2">
                                        <div class="form row">


                                            <div class="form-group col-12 mb-3 d-none">
                                                <strong> <%= form.label "Upload New Images", class: '' %> </strong>
                                                <br>
                                                <%# form.file_field :images, multiple: true, class: " btn", required: false %>
                                            </div>
                                            <div class="form-group col-12 mb-3">
                                                <strong> <%= form.label "Select Category", class: 'required' %> </strong>
                                                <%= form.collection_select :category_id, @categories, :id, :category_name, {:prompt => "Select Category"}, {:class => "form-control input100", :required => true} %>
                                            </div>
                                            <div class="form-group col-12 mb-3 d-none">
                                                <strong> <%= form.label "Select Sub Category"%> </strong>
                                                <%# select_tag :sub_category_id, options_for_select(@subcategories), :prompt => "Select Sub Category", :class => "form-control input100 d-none" %>
                                                <%# form.collection_select :sub_category_id, @subcategories, :id, :name, {:prompt => "Select a Sub Category"}, {:class=>"sub_category_selection form-control input100"} %>
                                            </div>
                                            <div class="form-group col-12 mb-3">
                                                <label> <strong><%= form.label "Product Name", class: "required" %></strong></label>
                                                <%= form.text_field :product_name, class: "form-control input100", :prompt => "Enter Products Name", required: true %>
                                            </div>
                                            <div class="form-group col-12 mb-3 d-none">
                                                <label> <strong> <%= form.label "Discount Available :", class: "" %> </strong> </label>
                                                <%# form.check_box :discount_available, class: ""  %>
                                            </div>
                                            <div class="form-group col-4 mb-3 d-none">
                                                <label> <strong> <%= form.label "Price :", class: "required" %> </strong> </label>
                                                <%# form.number_field :price, class: "form-control input100", required: true  %>
                                            </div>
                                            <div class="form-group col-4 mb-3 d-none">
                                                <label> <strong> <%= form.label "Discount :", class: "" %> </strong> </label>
                                                <%# form.text_field :discount, class: "form-control input100"  %>
                                            </div>
                                            <div class="form-group col-4 mb-3 d-none">
                                                <label> <strong> <%= form.label "New Price :", class: "" %> </strong> </label>
                                                <%# form.number_field :unit_price, class: "form-control input100"  %>
                                            </div>

                                            <div class="form-group col-12 mb-3 d-none">
                                                <label for="validationCustomUsername" class="required"> <strong> Year : </strong> </label>
                                                <%# form.text_field :year, :class => "form-control input100", required: true %>
                                            </div>
                                            <div class="form-group col-12 mb-3">
                                                <label class="required"><strong>Total Products :</strong></label>
                                                <fieldset class="qty-box pl-0">
                                                    <div class="input-group">
                                                        <!--<input class="touchspin" type="text" value="1">-->
                                                        <%# form.number_field :product_quantity, :class => "product_counter touchspin", :value => 1, min: 0, max: 1000 %>
                                                        <%= form.number_field :product_quantity, :class => "touchspin input100", :min => 1 , :max => 1000000, value: 1 %>
                                                    </div>
                                                </fieldset>
                                            </div>
                                            <!-- displays size and color variants -->
                                            <div id="variants d-none">
                                            </div>
                                            <div class="form-group col-12 mb-3">
                                                <label for="validationCustomUsername" class=""> <strong> Product Code : </strong> </label>
                                                <%= form.text_field :product_code, :class => "form-control input100", required: false %>
                                            </div>
                                            <div class="form-group col-12 mb-3 d-none">
                                                <label class="required"><strong>Add Description :</strong></label>
                                                <div class="description-sm">
                                                    <!--<textarea id="editor1" name="editor1" cols="10" rows="4"></textarea>-->
                                                    <%# form.text_area :product_description, :cols => 10, :rows => 4, id: "editor1" %>

                                                </div>
                                            </div>
                                            <div class="fileupload d-none">

                                                <%# form.label :product_images, "Upload images" %>
                                                <%# form.file_field :product_images, multiple: true %>

                                            </div>
                                            <%# Here I am  %>

                                            <div class="variant_elements col-12">
                                                <% looper = 0 %>
                                                <% while @no_of_variants > looper  do %>
                                                <div id="<%= "row#{looper}"%>">

                                                    <hr>
                                                    <h3>Catalog Item <%# looper %></h3>
                                                    <div class="row">

                                                        <div class="form-group col-sm-12 col-lg-6">
                                                            <label> <strong> <%= label_tag "Product Description :","Product Description", class: "required" %> </strong> </label>
                                                            <%= text_field_tag :product_description, @product.product_description[looper], class: 'form-control', name: "product[product_group][product_description][]", required: true%>
                                                        </div>

                                                        <div class="form-group col-sm-12 col-lg-6">
                                                            <label> <strong> <%= label_tag "Whole Sale Price :",'Whole Sale Price', class: "required" %> </strong> </label>
                                                            <%= text_field_tag :whole_sale, @product.whole_sale[looper], class: "form-control input100", required: true , name: "product[product_group][whole_sale][]"  %>
                                                        </div>
                                                        <div class="form-group col-sm-12 col-lg-6">
                                                            <label> <strong> <%= label_tag "Retail Price :","Retail Price", class: "required" %> </strong> </label>
                                                            <%= text_field_tag :rrp, @product.rrp[looper], class: "form-control input100", required: true , name: "product[product_group][rrp][]"  %>
                                                        </div>
                                                        <div class="form-group col-sm-12 col-lg-6">
                                                            <label> <strong> <%= label_tag "Minimum Order Quantity(Amount) :","Minimum Order Quantity(Amount)", class: "required" %> </strong> </label>
                                                            <%= number_field_tag :moq, @product.moq[looper], class: "form-control input100", required: true , name: "product[product_group][moq][]"   %>
                                                        </div>
                                                        <div class="form-group col-sm-12 col-lg-6">
                                                            <label> <strong> <%= label_tag "Minimum Order Quantity(Description) :","Minimum Order Quantity(Description)", class: "required" %> </strong> </label>
                                                            <%= text_field_tag :moq_description, @product.moq_description[looper], class: "form-control input100", required: true , name: "product[product_group][moq_description][]"   %>
                                                        </div>
                                                        <div class="form-group col-sm-12 col-lg-6">
                                                            <label> <strong> <%= label_tag "Display Symbol :", "Display Symbol",class: "required" %> </strong> </label>
                                                            <%= text_field_tag :name, @product.name[looper] , class: "form-control input100", required: true , name: "product[product_group][name][]"   %>
                                                        </div>
                                                        <div class="form-group col-sm-12 col-lg-6">
                                                            <%= image_tag @product.images[looper], class: "img-fluid image_zoom_1 blur-up lazyloaded", alt: "", id: "big_image" %>
                                                            <label> <strong> <%= label_tag "Upload New Image :", "Insert Image",class: "required" %> </strong> </label>
                                                           
                                                            
                                                            <%= form.file_field :images, multiple: false, class: " btn", required: true, name: "product[images][]" %>
                                                        </div>
                                                        <% if looper == 0 %>

                                                        <%else%>
                                                        <div class="form-group col-12">
                                                            <%= link_to remove_view_path(row_id: looper), class: "mt-2 btn btn-danger float-right", id: "remove_view", "data-confirm": "Are you sure?" , remote: true  do %>
                                                            -Remove-
                                                            <%end%>
                                                        </div>
                                                        <%end%>
                                                    </div>
                                                </div>
                                                <% looper = looper + 1 %>
                                                <%end%>

                                            </div>

                                            <%# Here I am  %>

                                            <div class="form-group col-12 mb-3">
                                                <%= link_to add_view_path(row_id: looper), class: "mt-2 btn btn-warning float-right", id: "add_view", remote: true  do %>
                                                +Add+
                                                <%end%>
                                                <div class="mt-4">
                                                    <%= form.submit "Edit Product", class: "btn btn-primary btn-bg mt-4" %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->

        </div>


        <!-- footer start-->
        <%= render 'layouts/admin_footer' %>
        <!-- footer end-->

    </div>

</div>

