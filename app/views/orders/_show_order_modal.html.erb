
<!-- Modals -->
<div class="modal fade" id="orderModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Ordered Products</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                   <% @items.each do |item| %>
                        <%= item.product.product_name %>
                        <%= item.quantity %>
                        <br>
                   <%end%>
                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-success btn--icon-text px-5" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
