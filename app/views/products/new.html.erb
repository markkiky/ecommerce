<script>
    $('#product_product_quantity input').on("click", function() {
        alert("clicked");
    });
    var product_counter = document.getElementById("product_product_quantity")
    var category = document.getElementById("category_id")
    category.addEventListener('change', function (evt) {
        // alert("reached");
        console.log(evt);
        $.post("/product_counter",
        {
            product_count: product_counter.value,
            category_id: category.value
        }

        );
    })
    product_counter.addEventListener('input', function(evt) {
        // alert("reached");
        console.log(evt);
        $.post("/product_counter",
        {
            product_count: product_counter.value,
            category_id: category.value
        }

        );
    })

</script>
