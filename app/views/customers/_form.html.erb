<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                      <%= form_with(model: customer, local: true, :html => {:class => 'theme-form'}) do |f| %>
                        
                        <div class="form-row">
                            <div class="col-md-6">
                                <%= f.label :first_name %>
                                <%= f.text_field :first_name, autofocus: true,  class: "form-control", placeholder: "First Name", required: true %>
                            </div>
                            <div class="col-md-6">

                                <%= f.label :last_name %>
                                <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">

                                <%= f.label :email %>

                                <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control",  required: true %>
                            </div>
                            <div class="col-md-6">
                                <%= f.label :password %>

                                <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder: "Enter your password", required: true %>
                            </div>
                            
                        </div>
                        <div class = "form-row">
                          <div class="col-md-6">
                            <%= f.label :phone %>
                            <%= f.number_field :phone, class: 'form-control', placeholder: "Enter phone number", required: false %>
                          </div>
                        </div>
                        <%= f.submit "Create Account", class: 'btn btn-solid' %>
                      <%end%>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
