<%= render 'layouts/header' %>
<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>create account</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">create account</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->


<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">

                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "theme-form"}) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-row form-inputs">
                        <div class="col-md-6">
                            <%= f.label :first_name %>
                            <%= f.text_field :first_name, autofocus: true,  class: "form-control", placeholder: "First Name", required: true %>
                        </div>
                        <div class="col-md-6">

                            <%= f.label :last_name %>
                            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>

                        </div>
                    </div>
                    <div class="form-row form-inputs">
                        <div class="col-md-6">

                            <%= f.label :email %>

                            <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control",  required: true %>
                        </div>
                        <div class="col-md-6">
                            <%= f.label :password %>

                            <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder: "Enter your password", required: true %>
                        </div>
                        <%= f.submit "Create Account", class: 'btn btn-solid' %>
                    </div>
                    <%end%>

                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
<%= render  'layouts/theme_setting'%>
<%= render 'layouts/footer' %>